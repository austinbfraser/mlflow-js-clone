{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "noImplicitAny": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*"],
  "exclude": ["node_modules"]
}
